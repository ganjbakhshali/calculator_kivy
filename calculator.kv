<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size:root.width , root.height


        TextInput:
            id:cal_input
            text:"0"
            halign: "right"
            font_size:65
            size_hint:(1,0.15)
            hint_text:'Only Numbers'
            input_filter : 'float'
            multiline:False
            write_tab:False

        GridLayout:
            rows:5
            cols:4

            #Row1
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"%"
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:u"\u00AB"
                on_press:root.remove()
            Button:
                id:clear
                on_press:root.clear()
                size_hint:(0.2,.2)
                font_size:32
                text:"C"
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"/"
                on_press:root.math_func("/")
#Row2
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"7"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(7)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"8"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(8)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"9"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(9)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"X"
                on_press:root.math_func("x")


#Row3
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"4"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(4)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"5"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(5)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"6"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(6)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"-"
                on_press:root.math_func("-")

#Row4
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"1"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(1)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"2"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(2)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"3"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(3)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"+"   
                on_press:root.math_func("+")     
#Row5
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"+/-"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.pos_neg()
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"0"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.Numbers_press(0)
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"."
                background_color:(157/255,157/255,157/255,1)
                on_press:root.math_func(".")
            Button:
                size_hint:(0.2,.2)
                font_size:32
                text:"="
                on_press:root.equals()
                
        
